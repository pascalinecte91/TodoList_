{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<div class="row">

		<div class="edit-task">
			{{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
			{{ form_row(form.title) }}
		    {{ form_row(form.content) }}

			<button type="submit" class="btn btn-success edit-btn-list">Modifier</button>
			{{ form_end(form) }}
		</div>

		<h3 class="red-access">Acces réservé aux utilisateurs connectés.</h3>

	</div>
{% endblock %}
